<Window x:Class="Rust_Painter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rust_Painter"
        mc:Ignorable="d"
        Title="Rust Painter" Height="406" Width="339">
    <Grid x:Name="mainGrid">
        <Button x:Name="uploadButton" Content=" Select Image" HorizontalAlignment="Left" Margin="28,56,0,0" VerticalAlignment="Top" Height="21" Width="90" Background="#FFDDDDDD" Click="UploadImageButton_Click"/>
        <Image x:Name="imgPreview" HorizontalAlignment="Left" Height="90" Margin="28,106,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBlock x:Name="textOutput" HorizontalAlignment="Left" Margin="170,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="196" Width="158" Text="{Binding Path=outPut}"/>
        <Image x:Name="imgOutput" HorizontalAlignment="Left" Height="90" Margin="28,237,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Preview:" HorizontalAlignment="Left" Margin="28,80,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Output:" HorizontalAlignment="Left" Margin="28,211,0,0" VerticalAlignment="Top" Width="90"/>
        <Button x:Name="paletteButton" Content=" Select Palette" HorizontalAlignment="Left" Margin="28,30,0,0" VerticalAlignment="Top" Height="21" Width="90" Background="#FFDDDDDD" Click="paletteClick"/>

    </Grid>
</Window>
